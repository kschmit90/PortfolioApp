<!DOCTYPE html>
<html>
<head>
  <title>PortfolioApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<% if flash[:notice] %>
			<p><%= flash[:notice] %></p>
		<% end %>

		<% if flash[:alert] %>
			<p><%= flash[:alert] %></p>
		<% end %>

		<% if current_user %>
			<p>Logged in as: <%= current_user.email %>! (<%= link_to("Log Out!", logout_path) %>)</p>
		<% end %>

		<%= yield %>
	</div>
</body>
</html>

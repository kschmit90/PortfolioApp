<!DOCTYPE html>
<html>
<head>
  <title>PortfolioApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<nav class="navbar navbar-default" role="navigation">
			<% if current_user %>
				<div class="logged_in">
					<p>Logged in as: <%= current_user.email %>! (<%= link_to("Log Out!", logout_path) %>)</p>
				</div>
			<% else %>
				<div class="form_field">
					<%= form_tag create_login_path do %>
			  			<div class="field">
			    	  	  <%= label_tag :email %><br />
			    		  <%= text_field_tag :email, params[:email] %>
			  	 		</div>
  
			 	 	   <div class="field">
			    	 	  <%= label_tag :password %><br />
			    	 	  <%= password_field_tag :password %>
			  	 	   </div>
			  
  			  		   <div class="submit_field">
			  			  <%= submit_tag "Log In" %>
		      		   </div>
		   			<% end %>
		  	   	</div>
			<% end %>
			<div id="nav_content">
				<p>Kyle Schmit |</p>
				<%= link_to("Blog", '#') %>
				<p>|</p>
				<%= link_to("Contact", new_contact_path) %>
			</div>
		</nav>
		
		<div class="content">
			<% if flash[:notice] %>
				<p><%= flash[:notice] %></p>
			<% end %>

			<% if flash[:alert] %>
				<p><%= flash[:alert] %></p>
			<% end %>

			<%= yield %>
		<div id="footer">
			<div class="container">
				<p>Kyle Schmit, 2014</p>
			</div>
		</div>
		</div>
	</div>
</body>
</html>
